{
  "openapi": "3.0.4",
  "info": {
    "title": "Books API",
    "version": "1.0.0",
    "description": "API to manage a collection of books. Allows creating, listing, retrieving by ID, and deleting books."
  },
  "tags": [
    {
      "name": "Books",
      "description": "Operations for managing books: create, list, retrieve by ID, and delete."
    }
  ],
  "paths": {
    "/books": {
      "get": {
        "summary": "Get a list of all the books in data",
        "description": "Returns a plain-text list of books (title and author). Skips invalid or incomplete JSON files.",
        "tags": ["Books"],
        "responses": {
          "200": {
            "description": "List of all valid books",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "▸ Don Quixote, Miguel de Cervantes\n▸ 1984, George Orwell\n▸ The Hobbit, J.R.R. Tolkien"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unexpected error. Please try again later."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new Book",
        "tags": ["Books"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "author"],
                "properties": {
                  "title": {
                    "type": "string",
                    "maxLength": 30,
                    "example": "The Hobbit"
                  },
                  "author": {
                    "type": "string",
                    "maxLength": 30,
                    "example": "J.R.R. Tolkien"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Book created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Book created successfully."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "123e4567-e89b-12d3-a456-426614174000"
                        },
                        "title": {
                          "type": "string",
                          "example": "The Hobbit"
                        },
                        "author": {
                          "type": "string",
                          "example": "J.R.R. Tolkien"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or missing data",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "string",
                          "example": "We didn’t receive the book information. Please try again."
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "errors": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "Please enter the book’s title.",
                            "The author’s name must not exceed 30 characters."
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Unexpected server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unexpected error. Please try again later."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "summary": "Get a book by ID",
        "description": "Searches for a book by UUID. If found, returns the title and author in plain text format.",
        "tags": ["Books"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Book ID (UUID format)",
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "123e4567-e89b-12d3-a456-426614174000"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book found",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "▸ Don Quixote, Miguel de Cervantes\n"
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The book ID you entered doesn't look right. Please check and try again."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Book not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "We couldn't find a book with that ID. Please try with a different one."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Unexpected server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unexpected error. Please try again later."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a book by ID",
        "description": "Deletes a book if the ID is valid and the book exists.",
        "tags": ["Books"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Book ID (UUID format)",
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "123e4567-e89b-12d3-a456-426614174000"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Book successfully deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "The book was deleted successfully."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Please provide the ID of the book you want to delete."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Book not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "We couldn't find a book with the given information."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Unexpected server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unexpected error. Please try again later."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
